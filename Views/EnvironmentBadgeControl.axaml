<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="30"
             x:Class="LesserDashboardClient.Views.EnvironmentBadgeControl"
             x:DataType="local:EnvironmentBadgeControl"
             xmlns:local="clr-namespace:LesserDashboardClient.Views">
  <Border CornerRadius="4"
          Padding="8,4"
          Background="{Binding BadgeColor}"
          ToolTip.Tip="{Binding TooltipText}">
    <TextBlock Text="{Binding EnvironmentName}"
               FontSize="11"
               FontWeight="Bold"
               Foreground="White"
               VerticalAlignment="Center"
               HorizontalAlignment="Center" />
  </Border>
</UserControl>

