<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LesserDashboardClient.Views.Collections"
             x:DataType="local:CardCombo"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LesserDashboardClient.Views.Collections.CardCombo"
             Name="Host">
  <UserControl.Resources>
    <x:Double x:Key="DefaultWidth">360</x:Double>
    <x:Double x:Key="DefaultHeightCard">280</x:Double>
    <x:Double x:Key="DefaultSizeIcons">30</x:Double>
  </UserControl.Resources>
  <Border 
          Name="MainBorder"
          CornerRadius="8"
          Width="{DynamicResource DefaultWidth}"
          Height="{DynamicResource DefaultHeightCard}"
          Padding="20" Margin="8"
          BorderThickness="2"
          BorderBrush="Black"
          Background="#383735"
          HorizontalAlignment="Stretch">
    <!--
    <Border.BorderBrush>
      <LinearGradientBrush Name="gradientBorder" StartPoint="0%,0%" EndPoint="100%,0%">
        <GradientStop  Color="Red" Offset="0.0" />
        <GradientStop x:Name="color2" Color="{Binding CollectionCombo.ComboColorAccent, RelativeSource={RelativeSource AncestorType=local:CardCombo}}" Offset="1.0" />
      </LinearGradientBrush>
    </Border.BorderBrush>
    -->

    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <!-- Título e descrição -->
        <RowDefinition Height="*"/>
        <!-- Espaço flexível -->
        <RowDefinition Height="Auto"/>
        <!-- Preço e botão -->
      </Grid.RowDefinitions>

      <!-- Título e Descrição -->
      <StackPanel Spacing="8" Grid.Row="0">
        <!-- Título -->
        <TextBlock FontWeight="Bold"
                   TextWrapping="Wrap"
                   Foreground="#FFFFFF"
                   FontSize="18"
                   Text="{Binding CollectionCombo.ComboTitle, RelativeSource={RelativeSource AncestorType=local:CardCombo}}"/>

        <!-- Descrição -->
        <TextBlock TextWrapping="Wrap"
                   ToolTip.Tip="{Binding CollectionCombo.ComboDescription, RelativeSource={RelativeSource AncestorType=local:CardCombo}}"
                   Foreground="#E2DFDC"
                   FontSize="12"
                   Text="{Binding CollectionCombo.ComboDescription, RelativeSource={RelativeSource AncestorType=local:CardCombo}}"/>

        <!-- Ícones -->
        <StackPanel Orientation="Horizontal" Spacing="6" Margin="0,12,0,0">
          <local:OcrIcon IsVisible="{Binding CollectionCombo.Ocr, RelativeSource={RelativeSource AncestorType=local:CardCombo}, Converter={StaticResource NullToBoolConverter}}"
                         Width="{DynamicResource DefaultSizeIcons}" Height="{DynamicResource DefaultSizeIcons}" />
          <local:PhotoSalesIcon IsVisible="{Binding CollectionCombo.EnablePhotoSales, RelativeSource={RelativeSource AncestorType=local:CardCombo}, Converter={StaticResource NullToBoolConverter}}"
                                Width="{DynamicResource DefaultSizeIcons}" Height="{DynamicResource DefaultSizeIcons}" />
          <local:AutoTreatmentIcon IsVisible="{Binding CollectionCombo.AutoTreatment, RelativeSource={RelativeSource AncestorType=local:CardCombo}, Converter={StaticResource NullToBoolConverter}}"
                                   Width="{DynamicResource DefaultSizeIcons}" Height="{DynamicResource DefaultSizeIcons}" />
          <local:HdAndTreatmentCollection IsVisible="{Binding CollectionCombo.BackupHd, RelativeSource={RelativeSource AncestorType=local:CardCombo}, Converter={StaticResource NullToBoolConverter}}"
                                          Width="{DynamicResource DefaultSizeIcons}" Height="{DynamicResource DefaultSizeIcons}" />
        </StackPanel>
      </StackPanel>

      <!-- Preço e Botão -->
      <Grid Grid.Row="3" Margin="0,20,0,0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Preço -->
        <StackPanel Grid.Column="0" VerticalAlignment="Bottom">
          <TextBlock Text="Preço de 1000 fotos"
                     Foreground="#E2DFDC"
                     FontSize="12"
                     Margin="0,0,0,4"/>
          <TextBlock FontSize="24"
                     FontWeight="Bold"
                     Foreground="#ff9600"
                     Text="{Binding CollectionCombo.ComboPrice, RelativeSource={RelativeSource AncestorType=local:CardCombo}, StringFormat='R$ {0:0.00}'}"/>
        </StackPanel>

        <!-- Botão -->
        <Button Grid.Column="1"
                Background="Transparent"
                Foreground="#ff9600"
                BorderBrush="#ff9600"
                BorderThickness="1"
                CornerRadius="4"
                Content="Selecionar"
                Padding="16,8"
                VerticalAlignment="Bottom"
                Cursor="Hand"
                Command="{Binding Command, RelativeSource={RelativeSource AncestorType=local:CardCombo}}"
                CommandParameter="{Binding CollectionCombo, RelativeSource={RelativeSource AncestorType=local:CardCombo}}">
          <Button.Styles>
            <Style Selector="Button:pointerover">
              <Setter Property="Background" Value="#ff9600"/>
              <Setter Property="Foreground" Value="#FFFFFF"/>
              <Setter Property="BorderBrush" Value="#ff9600"/>
            </Style>
          </Button.Styles>
        </Button>
      </Grid>
    </Grid>
  </Border>
</UserControl>
