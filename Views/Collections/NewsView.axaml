              <TextBlock Text="07/12/23" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource TextPrimaryBrush}"/>
              <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="14" Text="{Tr 'News_07_12_23_Content_1'}" />
              <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="14" Margin="0,8,0,0" Text="{Tr 'News_07_12_23_Content_2'}" />
              <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="14" Margin="0,8,0,0" Text="{Tr 'News_07_12_23_Content_3'}" />
            </StackPanel>
          </Border>
          
          <!-- Notícia 07/12/23 - Reajuste -->
