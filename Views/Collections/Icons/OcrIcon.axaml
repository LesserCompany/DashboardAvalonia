<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LesserDashboardClient.Views.Collections.OcrIcon">
  <Border Background="{DynamicResource BadgeBg}" CornerRadius="6" Padding="6,3">
    <TextBlock
        Text="OCR"
        Foreground="{DynamicResource BadgeFg}"
        FontWeight="SemiBold"
        FontSize="10"
        VerticalAlignment="Center"
        HorizontalAlignment="Center"
        Cursor="Help"
        ToolTip.Tip="{Tr 'Collection have Optical Reconition Charactere'}" />
  </Border>
</UserControl>
