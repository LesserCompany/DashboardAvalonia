<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:LesserDashboardClient.Views.Shared"
             xmlns:vm="clr-namespace:LesserDashboardClient.ViewModels.Invoices"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:InvoicesViewModel"
             x:Class="LesserDashboardClient.Views.Invoices.InvoicesControl">
  <UserControl.DataContext>
    <vm:InvoicesViewModel />
  </UserControl.DataContext>
  <Grid RowDefinitions="*,Auto">
    <WebView x:Name="PART_WebView" Grid.Row="0" Url="{Binding Url}" MinWidth="100" MinHeight="100" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0" Padding="0" />
    <!-- Barra inferior com botÃ£o "Abrir na web" -->
    <Border Grid.Row="1" 
            Background="Transparent"
            Padding="0">
      <shared:OpenInWebButton x:Name="OpenInWebButtonControl" 
                              HorizontalAlignment="Right" 
                              VerticalAlignment="Center"
                              Margin="0,6,0,6" />
    </Border>
  </Grid>
</UserControl>
